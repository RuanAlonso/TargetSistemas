def inverter_string(s):

    string_invertida = ''
    for i in range(len(s) - 1, -1, -1):  # Percorrendo a string de trás para frente
        string_invertida += s[i]  # Adicionando o caractere à string invertida
    return string_invertida

entrada = input("Digite uma palavra para inverter: ")

resultado = inverter_string(entrada)
print(f"A palavra invertida é: {resultado}")
